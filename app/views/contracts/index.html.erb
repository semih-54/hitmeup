<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-lg-7 col-sm-offset-1">
          <div class="d-flex align-items-center" >
            <%= image_tag "https://avatars.githubusercontent.com/u/147330364?v=4", class: "avatar-large pe-2", alt: "avatar-large" %>
            <div class="card-product-infos mt-3">
              <h3> Hello contractor <%= current_user.username %>, </h3>
            </div>
          </div>
      <br>

      <% if @contracts.count == 0 %>
        <p> You currently have no contract. </p>
        <br>
      <% else %>
        <% @contracts.each_with_index do |contract, index| %>
          <div class="card-product">
            <%= image_tag "https://avatars.githubusercontent.com/u/146410754?v=4", class: "avatar-square", alt: "avatar-square" %>
              <div class="card-product-infos">
                <h2> <strong>Contract #<%= index + 1 %>: </strong></h2>
                <p> <strong> To kill: </strong> <%= contract.victim_name %>, Age: <%= contract.victim_age %>
                <p> <strong> Selected scenario: </strong> <%= contract.scenario.name %> </p>
                <p> <strong> Selected hitman: </strong> <%= contract.hitman.user.username %> </p>
                <p> <strong> Contract status: </strong> <%= contract.status %>
                <p>
                <%= link_to "Delete",
                  contracts_path(contract),
                  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
                  %>
                </p>
              </div>
          </div>
        <% end %>
      <% end %>
      <br>
      <%= link_to "Create a new contract", new_contract_path %>
    </div>
  </div>
</div>